<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/settings_title">

    <EditTextPreference
        android:defaultValue="@string/settings_min_rank_default"
        android:inputType="number"
        android:key="@string/settings_min_rank_key"
        android:selectAllOnFocus="true"
        android:title="@string/settings_min_rank_label" />

    <EditTextPreference
        android:defaultValue="@string/settings_number_of_records_default"
        android:inputType="number"
        android:key="@string/settings_number_of_records_key"
        android:selectAllOnFocus="true"
        android:title="@string/settings_number_of_records_label" />

</PreferenceScreen>